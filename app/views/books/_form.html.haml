= form_with(model: book, local: true) do |form|
  - if book.errors.any?
    #error_explanation
      %h2
        = pluralize(book.errors.count, "error")
        prohibited this book from being saved:
      %ul
        - book.errors.full_messages.each do |message|
          %li= message
  .form-group
    = form.label :name
    = form.text_field :name, autofocus: true, class: 'form-control'
  .form-group
    = form.label :description
    = form.text_area :description, class: 'form-control'
  .form-group
    = form.label :genre_id
    = form.collection_select :genre_id, Genre.all, :id, :name, {}, class: 'form-control'
  .form-group
    = form.submit book.new_record? ? 'Create' : 'Update', class: 'btn btn-primary'
