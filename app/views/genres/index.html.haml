%p#notice= notice
%h1 Genres
%table
  %thead
    %tr
      %th Name
      %th Description
      %th{:colspan => "3"}
  %tbody
    - @genres.each do |genre|
      %tr
        %td= genre.name
        %td= genre.description
        %td= link_to 'Show', genre
        %td= link_to 'Edit', edit_genre_path(genre)
        %td= link_to 'Destroy', genre, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Genre', new_genre_path
