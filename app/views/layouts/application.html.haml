!!!
%html{ lang: 'en' }
  %head
    %meta{ content: "text/html; charset=UTF-8", "http-equiv" => "Content-Type" }
    %meta{ name: 'viewport',  content: 'width=device-width, initial-scale=1, shrink-to-fit=no' }
    = favicon_link_tag 'cropped-favicon.png', type: 'image/png'
    %title
      Readers Club
      = yield :title
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %nav.navbar.navbar-dark.bg-dark.fixed-top.navbar-expand-md
      = link_to root_path, class: 'navbar-brand' do
        = image_tag 'cropped-favicon.png', :alt => "", :height => "30", :width => "30", class: 'd-inline-block align-top'
        Readers Club
      %button.navbar-toggler{ type: "button", 'data-toggle' => "collapse", 'data-target'=> "#navbarNavAltMarkup", 'aria-controls' => "navbarNavAltMarkup", 'aria-expanded' => "false", 'aria-label'=> "Toggle navigation"}
        %span.navbar-toggler-icon
      %div.collapse.navbar-collapse#navbarNavAltMarkup
        %div.navbar-nav
          - if user_signed_in?
            = link_to 'Books', books_path, class: 'nav-item nav-link'
      %ul.nav.justify-content-end
        - if user_signed_in?
          %li.nav-item= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'navbar-brand'
        - else
          %li.nav-item= link_to 'Sign Up', new_user_registration_path, class: 'navbar-brand'
          %li.nav-item= link_to 'Sign In', new_user_session_path, class: 'navbar-brand'
    %div.container-fluid
      - if user_signed_in?
        .row
          .col-sm-2
            = render 'layouts/profile'
          .col-sm-7
            - unless notice.blank?
              %p.alert.alert-secondary#notice= notice
            = yield
          .col-sm-3
            = # right side content
      - else
        .row
          .col-md-10.offset-md-1
            - unless notice.blank?
              %p.alert.alert-secondary#notice= notice
            = yield
