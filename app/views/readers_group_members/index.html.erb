<h1>Readers Group Members</h1>

<table>
  <thead>
    <tr>
      <th>Readers group</th>
      <th>User</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @readers_group_members.each do |readers_group_member| %>
      <tr>
        <td><%= readers_group_member.readers_group %></td>
        <td><%= readers_group_member.user %></td>
        <td><%= readers_group_member.role %></td>
        <td><%= link_to 'Show', readers_group_member %></td>
        <td><%= link_to 'Edit', edit_readers_group_member_path(readers_group_member) %></td>
        <td><%= link_to 'Destroy', readers_group_member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

