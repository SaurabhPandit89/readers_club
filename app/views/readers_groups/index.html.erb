<h1>Readers Groups</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @readers_groups.each do |readers_group| %>
      <tr>
        <td><%= readers_group.name %></td>
        <td><%= readers_group.description %></td>
        <td><%= link_to 'Show', readers_group %></td>
        <td><%= link_to 'Edit', edit_readers_group_path(readers_group) %></td>
        <td><%= link_to 'Destroy', readers_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

